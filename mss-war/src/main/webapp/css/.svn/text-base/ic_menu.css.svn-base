/**
  * POSTAL-STYLE STYLE SHEETS (AS APPROVED BY THE INTERNET CHANNEL)
  * For Left Menu Bar
  */
.topMenuBar
{
	width:100%;
	position: relative;
	top: 1px;
	height: 25px;
	padding: 0;
	margin: 0;
	font-size: 0pt;
	background-image: url('/govgrnds-example/images/top_bar.gif');
	
}


#mainPage {
	position: relative;
	padding-bottom: 0px;
	width: 540px;
	min-height: 400px;
	float: left;
	border-top: 0px;
	border-bottom: 1px;
	border-bottom-style: solid;
	border-bottom-color: #003399;
	margin-bottom: 1px;
    /* max-width: 700px;*/
    z-index: 3;
	border-left: 180px;
	border-left-style: solid;
	border-left-color: #003399;

}


.pageFrame
{
	/* margin: 175px, 175px; */
	min-height: 400px;
	float: left;
	/* width: 100%;  */
	position: relative;
	padding-left: 20px ;
	z-index: 6;

}

/* Mozilla Fix */
.pageFrame{
	 margin: 0 -8px 0 -2px; 
}



.leftMenu{	
	width: 175px;
	float: left;
	min-height: 378px;
	position: relative; 
	margin-left: -730px;
	margin-top: 0px;
    padding-right: 7px;
    padding-top: 40px;
    padding-bottom: -1px;
    /* for debugging
    border: 0px;
	border-style: solid;
	border-color: orange;*/
    z-index: 10;

}

/* Mozilla Fix */
.leftMenu{
	margin-right: 1px; 
}


.leftMenu ul
{
	padding: 0;
	padding-bottom: 2px;
	padding-right: 5px;
	margin: 0;
	
}
.leftMenu ul li
{
	color: #999999;
	font-size: 13px;
	font-family: Arial, Helvetica, sans-serif; 
	list-style-type: none;	
	padding-bottom: 2px;
	font-weight: bold;
	text-align: right;
}
.leftMenu ul li.active
{
	list-style-image: url('/govgrnds-example/images/smgarrow.gif');
}
.leftMenu ul li a
{
	color: #ffffff;
}
.leftMenu ul ul
{
	padding-right: 0;
}
.leftMenu ul ul li
{
	font-size: 11px; 
	line-height: 12px;
	font-weight: none;
}
.leftMenu ul ul li a
{
	font-weight: none;
	text-decoration: none;
}


.navBar
{
	width: 538px;
	background-image: url('/govgrnds-example/images/top_nav1.gif');
	height: 18px;
	display: block;
	position: relative;
	margin-left: 3px;
	padding: 0;
	top: 3px;
}
.navBar a
{
	background-image: url('/govgrnds-example/images/top_nav2.gif');
	display: block;
	float: right;
	font: bold 11px Arial, Helvetica, sans-serif; 
	color: #003399;
	height: 18px;
	width: 263px;
	text-align: center;
}
h1
{
	margin-top: 10px;
	margin-bottom: 10px;
	padding: 0;	
	width: 100%;
}
h1	
{
	color: #000099;
	font-family: "Arial Narrow", Arial, Helvetica, SansSerif;
	font-size: 24px;
	position: relative;
}
.bodyFrame
{
	width: 521px;
	border: 1px solid #CCCCCC;	
	padding-bottom: 20px;
	margin-bottom: 20px;
}
.bodyContent
{
	padding-left: 6px;
}
/* This allows the floating contents of body content to stretch bodyContent */
.bodyContent:after {
    content: "."; 
    display: block; 
    height: 0; 
    clear: both; 
    visibility: hidden;
}
h2
{
	margin-top: 0;
	padding-left: 6px;
	
	padding-top: 6px;
}
.breadcrumbs
{
	font-family: Arial, Helvetica, SansSerif;
	color: #003399;
	font-size: 10px;
	font-weight: bold;
	padding-bottom: 4px;
}
